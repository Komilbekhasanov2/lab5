#include <iostream>
using namespace std;
int main() {
    int i=0,integer;
    float average, sum = 0;
    cout << "Enter a number: ";
    cin >> integer;
    while (integer != 0) {
        sum = integer + sum;
        cout << "Enter a number: ";
        cin >> integer;
        ++i;
    }
    average = sum / i;
    cout << average << endl;
}
